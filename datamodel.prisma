type User {
  id: ID! @unique
  fullname: String!
  DOB: DateTime!
  email: String! @unique
  phonenumber: String! @unique
  password: String!
  profile_picture: String!
  transaction_pin: String!
  gender: Gender!
  verified: Boolean! @default(value: "false")
  deleted: Boolean! @default(value: "false")
  deletedAt: DateTime
  createdAt: DateTime!
  updatedAt: DateTime!
  #relationships
  verificationCode: VerificationCode
  passwordResetCode: PasswordResetCode
  wallet: Wallet
}

# verification code to verify user
type VerificationCode {
  id: ID! @unique
  code: Int!
  deleted: Boolean! @default(value: "false")
  deletedAt: DateTime
  createdAt: DateTime!
  updatedAt: DateTime!
  #relationships
  user: User!
}

# password reset code to reset users password
type PasswordResetCode {
  id: ID! @unique
  code: Int!
  deleted: Boolean! @default(value: "false")
  deletedAt: DateTime
  createdAt: DateTime!
  updatedAt: DateTime!
  #relationships
  user: User!
}

#wallet
type Wallet {
  id: ID! @unique
  amount: Float!
  deleted: Boolean! @default(value: "false")
  deletedAt: DateTime
  createdAt: DateTime!
  updatedAt: DateTime!
  #relationships
  user: User!
  wallet_transactions: [WalletTransaction!]!
}

type WalletTransaction {
  id: ID! @unique
  amount: Float!
  type: TransactionType!
  description: String!
  deleted: Boolean! @default(value: "false")
  deletedAt: DateTime
  createdAt: DateTime!
  updatedAt: DateTime!

  #relationships
  wallet: Wallet!
}

enum TransactionType {
  Debit
  Credit
  Pending
}

enum Gender {
  Male
  Female
}
